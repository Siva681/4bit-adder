// Code your design here
module bitadder(a,b,sum,carry);
  input [3:0]a,b;
  output reg [3:0]sum;
  output reg  carry;
  reg [4:0]s;
  integer i;
  
  always@(a or b) begin
    s[0]=0;
    for(i=0;i<=3;i=i+1)
      begin
        sum[i]=a[i]^b[i]^s[i];
        s[i+1]=(a[i]&b[i])|(b[i]&s[i])|(s[i]&a[i]);
      end
    carry=s[4];
  end
endmodule
