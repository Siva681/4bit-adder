module  bitadder_tb();
  reg [3:0]a,b;
  wire [3:0]sum;
  wire carry;
  bitadder  uut(a,b,sum,carry);
   initial begin
     $monitor("  a=%b  |b=%b  |carry=%b sum=%b ",a,b,carry,sum);
     a=4'b0000 ;b=4'b0000;
     #10 a=4'b0001 ;b=4'b0010;
     #9 a=4'b1111;b=4'b1111;
     #1 $finish;
   end
endmodule
     
